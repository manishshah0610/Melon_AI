<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/summary"
        android:layout_width="141dp"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_corner"
        android:drawableTop="@drawable/brief"
        android:fontFamily="monospace"
        android:onClick="summary"
        android:text="Convert Text to Summary"
        android:textColor="#000000" />


    <Button
        android:id="@+id/alarm"
        android:layout_width="141dp"
        android:layout_height="127dp"
        android:layout_alignStart="@+id/notepad"
        android:layout_alignTop="@+id/tutorial"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/rounded_corner"
        android:drawableTop="@drawable/alarm_clock"
        android:fontFamily="monospace"
        android:onClick="alarm"
        android:text="Alarm"
        android:textColor="#000000"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/tutorial"
        android:layout_width="141dp"
        android:layout_height="127dp"
        android:layout_alignStart="@+id/summary"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="265dp"
        android:background="@drawable/rounded_corner"
        android:drawableTop="@drawable/tutorial"
        android:fontFamily="monospace"
        android:onClick="tutorial"
        android:text="Tutorial"
        android:textColor="#000000" />


    <Button
        android:id="@+id/notepad"

        android:layout_width="141dp"
        android:layout_height="127dp"
        android:layout_alignTop="@+id/summary"
        android:layout_alignRight="@+id/summary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="-210dp"
        android:background="@drawable/rounded_corner"
        android:drawableTop="@drawable/notepad"
        android:fontFamily="monospace"
        android:onClick="notepad"
        android:text="Notepad"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="97dp"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"

            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="97dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"

            android:layout_toEndOf="@+id/home"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="97dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"

            android:layout_toEndOf="@+id/settings"
            android:src="@drawable/profile" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="97dp"
            android:layout_height="79dp"


            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/profile"
            android:src="@drawable/search" />
    </LinearLayout>


</RelativeLayout>